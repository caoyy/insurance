<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.rokyinfo.insurance.dao.InsSolutionDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="net.rokyinfo.insurance.entity.InsSolutionEntity" id="insSolutionMap">
        <result property="id" column="id"/>
        <result property="version" column="version"/>
        <result property="createTime" column="create_time"/>
        <result property="modifier" column="modifier"/>
        <result property="creator" column="creator"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="productId" column="product_id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="desc" column="desc"/>
        <result property="image" column="image"/>
        <result property="price" column="price"/>
        <result property="indate" column="indate"/>
    </resultMap>

	<select id="queryObject" resultType="net.rokyinfo.insurance.entity.InsSolutionEntity">
		select * from ins_solution where id = #{value}
	</select>

	<select id="queryList" resultType="net.rokyinfo.insurance.entity.InsSolutionEntity">
		select * from ins_solution
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from ins_solution 
	</select>
	 
	<insert id="save" parameterType="net.rokyinfo.insurance.entity.InsSolutionEntity" useGeneratedKeys="true" keyProperty="id">
		insert into ins_solution
		(
			`version`, 
			`create_time`, 
			`modifier`, 
			`creator`, 
			`modify_time`, 
			`remark`, 
			`status`, 
			`product_id`, 
			`code`, 
			`name`, 
			`desc`, 
			`image`, 
			`price`, 
			`indate`
		)
		values
		(
			#{version}, 
			#{createTime}, 
			#{modifier}, 
			#{creator}, 
			#{modifyTime}, 
			#{remark}, 
			#{status}, 
			#{productId}, 
			#{code}, 
			#{name}, 
			#{desc}, 
			#{image}, 
			#{price}, 
			#{indate}
		)
	</insert>
	 
	<update id="update" parameterType="net.rokyinfo.insurance.entity.InsSolutionEntity">
		update ins_solution 
		<set>
			<if test="version != null">`version` = #{version}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifier != null">`modifier` = #{modifier}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="code != null">`code` = #{code}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="desc != null">`desc` = #{desc}, </if>
			<if test="image != null">`image` = #{image}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="indate != null">`indate` = #{indate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from ins_solution where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from ins_solution where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>